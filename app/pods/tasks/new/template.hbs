{{#if session.isAuthenticated}}
  <form>
    <div class="form-group">
      <label>Title</label>
      {{input type="text" class="form-control" value=task.title
      placeholder="Add Task..."}}
    </div>
    <div class="form-group">
      <label>Due Date</label>
      {{input type="date" class="form-control" value=task.date
      placeholder="mm/dd/yyyy"}}
    </div>
    <div class="form-group">
      <label>Destination</label>
      {{g-autocomplete value=task.location on-select=(action 'didUpdatePlace')}}
      {{g-maps name="my-map" lat=lat lng=lng zoom=zoom markers=markers}}
    </div>
     <div class="form-group">
      <label>Description</label>
      {{textarea type="text" class="form-control" value=task.description
      placeholder="Describe Task..."}}
    </div>
    <button {{action 'addTask'}} class="btn btn-primary">Submit</button>
  </form>
{{/if}}
