{{#if session.isAuthenticated}}
  <form>
    {{paper-input flex=30 label="Title" value=task.title onChange=(action (mut task.title))}}
    {{paper-input flex=true label="Due date" type="date" value=task.date onChange=(action (mut task.date))}}
     <div class="form-group">
      {{paper-input textarea=true block=true label="Description" passThru=(hash rows=4 maxRows=4)
        value=task.description onChange=(action (mut task.description))}}
    </div>
    <div class="form-group">
      {{paper-switch label="Location" value=showAutocomplete onChange=(action (mut showAutocomplete))}}
      {{#if showAutocomplete}}
        {{g-autocomplete class="autocomplete" size='45' value=task.location on-select=(action 'didUpdatePlace')}}
      {{/if}}
      {{paper-switch label="Google Map" value=showMap onChange=(action (mut showMap))}}
      {{#if showMap}}
        {{g-maps name="my-map" lat=lat lng=lng zoom=zoom markers=markers}}
      {{/if}}
    </div>
    <button {{action 'addTask'}} class="btn btn-primary">Submit</button>
  </form>
{{/if}}
