{{#if session.isAuthenticated}}
  {{liquid-outlet class="new-container"}}
  <h1>Tasks</h1>
  <div class="row">
    <div class="col-md-4 col-md-offset-8">
      <form class="search-form">
        <div class="form-group has-feedback">
        <label for="search" class="sr-only">Search</label>
        {{input type="text" value=searchTerm class="form-control" placeholder="search "}}
        <span class="glyphicon glyphicon-search form-control-feedback"></span>
        </div>
      </form>
    </div>
  </div>
  {{#if taskNotFound}}
      <li class="list-group-item empty-list">
      <div class="empty-message">
        Task not Found.
      </div>
    </li>
  {{/if}}
  {{#each matchingTasks as |task|}}
    <div class="list-group-item">
      {{#if task.isEditing}}
        <button class="btn btn-primary pull-right" {{action "save" task}}>Save</button>
      {{else}}
        <button class="btn btn-primary pull-right" {{action "edit" task}}>Edit</button>
      {{/if}}

      {{#liquid-if task.isEditing class="task-edit"}}
        <div class="form-group">
        <label>Title</label>
        {{input type="text" class="form-control" value=task.title
        placeholder="Add Task..."}}
        </div>
        <div class="form-group">
          <label>Due Date</label>
          {{input type="date" class="form-control" value=task.date}}
        </div>
        <div class="form-group">
          <label>Description</label>
          {{textarea type="text" class="form-control" value=task.description
          placeholder="Describe Task..."}}
        </div>
      {{else}}
        <h3>{{task.title}}</h3>
        <h4>Due: {{moment-format task.date timeZone='Canada/Toronto'}}</h4>
        <h5>
          It is due <strong>{{moment-from-now task.date timeZone='Canada/Toronto'}}</strong>
        </h5>
        <p>{{task.description}}</p>
        {{#if task.location}}
          <p>Location: {{task.location}}</p>
          {{g-maps lat=task.position.lat lng=task.position.lng zoom=zoom markers=task.markers}}
        {{/if}}
        <button {{action 'deleteTask' task.id}} class="btn btn-danger">Delete</button>
      {{/liquid-if}}
    </div>
  {{/each}}
  {{#unless noTasks}}
    <li class="list-group-item empty-list">
      <div class="empty-message">
        There are no tasks yet. Do you need to {{#link-to 'tasks.new'}}create one{{/link-to}}?
      </div>
    </li>
  {{/unless}}
{{/if}}