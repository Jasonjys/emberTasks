{{#if session.isAuthenticated}}
  {{outlet}}
  <h1>Tasks</h1>
  {{#each model as |task|}}
    <div class="well">
      {{#if task.isEditing}}
        <button class="btn btn-primary pull-right" {{action "save" task}}>Save</button>
      {{else}}
        <button class="btn btn-primary pull-right" {{action "edit" task}}>Edit</button>
      {{/if}}

      {{#if task.isEditing}}
        <div class="form-group">
        <label>Title</label>
        {{input type="text" class="form-control" value=task.title
        placeholder="Add Task..."}}
        </div>
        <div class="form-group">
          <label>Due Date</label>
          {{input type="date" class="form-control" value=task.date}}
        </div>
        <div class="form-group">
          <label>Description</label>
          {{textarea type="text" class="form-control" value=task.description
          placeholder="Describe Task..."}}
        </div>
      {{else}}
        <h3>{{task.title}}</h3>
        <h4>Due: {{moment-format task.date timeZone='Canada/Toronto'}}</h4>
        <h5>
          It is due <strong>{{moment-from-now task.date timeZone='Canada/Toronto'}}</strong>
        </h5>
        <p>{{task.description}}</p>
        {{g-autocomplete value=address on-select=(action 'didUpdatePlace')}}
        {{g-maps name="my-map" lat=lat lng=lng zoom=zoom}}
      {{/if}}
    </div>
  {{/each}}
{{/if}}